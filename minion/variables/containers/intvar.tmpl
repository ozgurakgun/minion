template<typename d_type>
struct <VARNAME>VarContainer {
  typedef <VARNAME>VarRef_internal_template<BitContainerType> <VARNAME>VarRef_internal;

  StateObj* stateObj;
  
  <VARNAME>VarContainer(StateObj* _stateObj) : stateObj(_stateObj),
                                              bms_array(&getMemory(stateObj).monotonicSet()),
                                              trigger_list(stateObj, false),
                                              lock_m(0)
  { 
    temp1 = 0;
  }
  
  typedef DomainInt domain_bound_type;
  MoveablePointer bound_data;
  MonotonicSet *bms_array;
  TriggerList trigger_list;

  int temp1;
  /// Constraints variable participates in
  vector<vector<AbstractConstraint*> > constraints;
#ifdef WDEG
  vector<unsigned int> wdegs;
#endif
  
 
  BOOL lock_m;
  
  domain_bound_type& lower_bound(<VARNAME>VarRef_internal i) const
  { return static_cast<domain_bound_type*>(bound_data.get_ptr())[i.var_num*2]; }
  
  domain_bound_type& upper_bound(<VARNAME>VarRef_internal i) const
  { return static_cast<domain_bound_type*>(bound_data.get_ptr())[i.var_num*2 + 1]; }
    
  /// Find new "true" upper bound.
  /// This should be used by first setting the value of upper_bound(d), then calling
  /// this function to move this value past any removed values.
  DomainInt find_new_upper_bound(<VARNAME>VarRef_internal d)
  {
    DomainInt lower = lower_bound(d); 
    DomainInt old_up_bound = upper_bound(d);
    DomainInt loopvar = old_up_bound; 
    if(loopvar < lower)
    {
      getState(stateObj).setFailed(true);
      /// Here just remove the value which should lead to the least work.
      return upper_bound(d);
    }
    if(bms_array->isMember(d.var_num * <DOMSIZE> + temp1 + loopvar) && (loopvar >= lower))
      return upper_bound(d);
    --loopvar;
    for(; loopvar >= lower; --loopvar)
    {
      if(bms_array->isMember(d.var_num * <DOMSIZE> + temp1 + loopvar)) 
        return loopvar;
    }
    getState(stateObj).setFailed(true);
    return old_up_bound;
  }
  
  /// Find new "true" lower bound.
  /// This should be used by first setting the value of lower_bound(d), then calling
  /// this function to move this value past any removed values.
  DomainInt find_new_lower_bound(<VARNAME>VarRef_internal d)
  {
    DomainInt upper = upper_bound(d); 
    DomainInt old_low_bound = lower_bound(d);
    DomainInt loopvar = old_low_bound; 
    if(loopvar > upper)
    {
      getState(stateObj).setFailed(true);
      /// Here just remove the value which should lead to the least work.
      return lower_bound(d);
    }
    if(bms_array->isMember(d.var_num * <DOMSIZE> + temp1 + loopvar) && (loopvar <= upper))
      return lower_bound(d);
    ++loopvar;
    for(; loopvar <= upper; ++loopvar)
    {
      if(bms_array->isMember(d.var_num * <DOMSIZE> + temp1 + loopvar)) 
        return loopvar;
    }
    getState(stateObj).setFailed(true);
    return old_low_bound;
  }
  
 void lock()
  { 
    D_ASSERT(!lock_m);
    lock_m = true;
    //bms_array->lock(stateObj); // gets locked in constraint_setup.cpp
 }

  void addVariables()
  {
    D_ASSERT(!lock_m);
      constraints.resize(<NUMVARS>);
#ifdef WDEG
      if(getOptions(stateObj).wdeg_on) wdegs.resize(<NUMVARS>);
#endif

 
    bound_data = getMemory(stateObj).backTrack().request_bytes(<NUMVARS> * 2 * sizeof(domain_bound_type));
    temp1=bms_array->request_storage(<DOMSIZE>*<NUMVARS>)-<DOMSTART>;
    
    domain_bound_type* bound_ptr = static_cast<domain_bound_type*>(bound_data.get_ptr());
    
      for(unsigned int i = 0; i < <NUMVARS>; ++i)
      {
        bound_ptr[2*i] = <DOMSTART>;
        bound_ptr[2*i+1] = <DOMEND>;
      }
    trigger_list.lock(<NUMVARS>, <DOMSTART>, <DOMEND>);
  }
  
  BOOL isAssigned(<VARNAME>VarRef_internal d) const
  { 
    D_ASSERT(lock_m);
    return lower_bound(d) == upper_bound(d); 
  }
  
  DomainInt getAssignedValue(<VARNAME>VarRef_internal d) const
  {
    D_ASSERT(lock_m);
    D_ASSERT(isAssigned(d));
    return getMin(d);
  }
  
  BOOL inDomain(<VARNAME>VarRef_internal d, DomainInt i) const
  {
    D_ASSERT(lock_m);
    if (i < lower_bound(d) || i > upper_bound(d))
      return false;
    return bms_array->isMember(d.var_num * <DOMSIZE> + temp1 + i);
  }
  
  // Warning: If this is ever changed, be sure to check through the code for other places
  // where bms_array is used directly.
  BOOL inDomain_noBoundCheck(<VARNAME>VarRef_internal d, DomainInt i) const
  {
    D_ASSERT(lock_m);
    D_ASSERT(i >= lower_bound(d));
    D_ASSERT(i <= upper_bound(d));
    return bms_array->isMember(d.var_num * <DOMSIZE> + temp1 + i );
  }
  
  DomainInt getMin(<VARNAME>VarRef_internal d) const
  {
    D_ASSERT(lock_m);
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );
    return lower_bound(d);
  }
  
  DomainInt getMax(<VARNAME>VarRef_internal d) const
  {
    D_ASSERT(lock_m);
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );
    return upper_bound(d);
  }
  
  DomainInt getInitialMin(<VARNAME>VarRef_internal d) const
  { return <DOMSTART>; }
  
  DomainInt getInitialMax(<VARNAME>VarRef_internal d) const
  { return <DOMEND>; }
   
  void removeFromDomain(<VARNAME>VarRef_internal d, DomainInt i)
  {
#ifdef DEBUG
    cout << "Calling removeFromDomain: " << d.var_num << " " << i << " [" 
         << lower_bound(d) << ":" << upper_bound(d) << "] original ["
         << getInitialMin(d) << ":" << getInitialMax(d) << "]"
         << endl;
    //bms_pointer(d)->print_state();
    bms_array->print_state();
#endif
    D_ASSERT(lock_m);
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );
if((i < lower_bound(d)) || (i > upper_bound(d)) || ! (bms_array->ifMember_remove(d.var_num * <DOMSIZE> + temp1 + i) ))
    {
#ifdef DEBUG
      cout << "Exiting removeFromDomain: " << d.var_num << " nothing to do" << endl;
#endif
      return;
    }
#ifdef FULL_DOMAIN_TRIGGERS
    trigger_list.push_domain_removal(d.var_num, i);
#endif
#ifndef NO_DOMAIN_TRIGGERS
    trigger_list.push_domain_changed(d.var_num);
#endif
    D_ASSERT( ! bms_array->isMember(d.var_num * <DOMSIZE> + temp1 + i));
    
    domain_bound_type up_bound = upper_bound(d);
    if(i == up_bound)
    {
      upper_bound(d) = find_new_upper_bound(d);
      trigger_list.push_upper(d.var_num, up_bound - upper_bound(d));
      if(upper_bound(d) == lower_bound(d)) {
        trigger_list.push_assign(d.var_num, getAssignedValue(d));
      }
      return;
    }

    domain_bound_type low_bound = lower_bound(d);
    if(i == low_bound)
    {
      lower_bound(d) = find_new_lower_bound(d);
      trigger_list.push_lower(d.var_num, lower_bound(d) - low_bound);
      if(upper_bound(d) == lower_bound(d)) {
        trigger_list.push_assign(d.var_num, getAssignedValue(d));
      }
      return;
    }
    
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );

#ifdef DEBUG
    cout << "Exiting removeFromDomain: " << d.var_num << " " << i << " [" 
         << lower_bound(d) << ":" << upper_bound(d) << "] original ["
         << getInitialMin(d) << ":" << getInitialMax(d) << "]"
         << endl;
    bms_array->print_state();
#endif
    return;
  }

  BOOL validAssignment(<VARNAME>VarRef_internal d, DomainInt offset, DomainInt lower, DomainInt upper)
  {
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );
    if(!inDomain(d,offset))
    {
      getState(stateObj).setFailed(true); 
      return false;
    }
    if(offset == upper && offset == lower)
      return false;
    if(offset > upper || offset < lower)
    {
      getState(stateObj).setFailed(true);
      return false;
    }
    return true;
  }    
  
  void propagateAssign(<VARNAME>VarRef_internal d, DomainInt offset)
  {
    DomainInt lower = lower_bound(d);
    DomainInt upper = upper_bound(d);
    if(!validAssignment(d, offset, lower, upper)) return;
    commonAssign(d, offset, lower, upper);
  }

  void uncheckedAssign(<VARNAME>VarRef_internal d, DomainInt i)
  { 
    D_ASSERT(inDomain(d,i));
    D_ASSERT(!isAssigned(d));
    commonAssign(d,i, lower_bound(d), upper_bound(d)); 
  }

  void decisionAssign(<VARNAME>VarRef_internal d, DomainInt i)
  {
    D_ASSERT(inDomain(d,i));
    D_ASSERT(!isAssigned(d));
    commonAssign(d,i, lower_bound(d), upper_bound(d)); 
  }
    
private:
  // This function just unifies part of propagateAssign and uncheckedAssign
  void commonAssign(<VARNAME>VarRef_internal d, DomainInt offset, DomainInt lower, DomainInt upper)
  {
#ifdef FULL_DOMAIN_TRIGGERS
    // TODO : Optimise this function to only check values in domain.
    int domainOffset = d.var_num * <DOMSIZE> + temp1;
    for(DomainInt loop = lower; loop <= upper; ++loop)
    {
      if(bms_array->isMember(loop + domainOffset) && loop != offset) {
        trigger_list.push_domain_removal(d.var_num, loop);
      }
    }
#endif
    trigger_list.push_domain_changed(d.var_num);
    trigger_list.push_assign(d.var_num, offset);
    
    DomainInt low_bound = lower_bound(d);
    if(offset != low_bound)
    {
      trigger_list.push_lower(d.var_num, offset - low_bound);
      lower_bound(d) = offset;
    }
    
    DomainInt up_bound = upper_bound(d);
    if(offset != up_bound)
    {
      trigger_list.push_upper(d.var_num, up_bound - offset);
      upper_bound(d) = offset;
    }
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );
  }    
public:

  
  void setMax(<VARNAME>VarRef_internal d, DomainInt offset)
  {
#ifdef DEBUG
    cout << "Calling setMax: " << d.var_num << " " << offset << " [" 
         << lower_bound(d) << ":" << upper_bound(d) << "] original ["
         << getInitialMin(d) << ":" << getInitialMax(d) << "]"
         << endl;
    bms_array->print_state();
#endif

    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );
    DomainInt up_bound = upper_bound(d);
    DomainInt low_bound = lower_bound(d);
    
    if(offset < low_bound)
    {
      getState(stateObj).setFailed(true);
      return;
    }
    
    if(offset < up_bound)
    {
#ifdef FULL_DOMAIN_TRIGGERS
      // TODO : Optimise this function to only check values in domain.
      int domainOffset = d.var_num * <DOMSIZE> + temp1;
      for(DomainInt loop = offset + 1; loop <= up_bound; ++loop)
      {
        if(bms_array->isMember(domainOffset + loop)) {
          trigger_list.push_domain_removal(d.var_num, loop);
        }
      }
#endif   
      upper_bound(d) = offset;      
      DomainInt new_upper = find_new_upper_bound(d);
      upper_bound(d) = new_upper;
      
#ifndef NO_DOMAIN_TRIGGERS
    trigger_list.push_domain_changed(d.var_num);
#endif
       trigger_list.push_upper(d.var_num, up_bound - upper_bound(d));
      
      if(lower_bound(d) == upper_bound(d)) {
        trigger_list.push_assign(d.var_num, getAssignedValue(d));
      }
    }
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );
#ifdef DEBUG
    cout << "Exiting setMax: " << d.var_num << " " << upper_bound(d) << " [" 
         << lower_bound(d) << ":" << upper_bound(d) << "] original ["
         << getInitialMin(d) << ":" << getInitialMax(d) << "]"
         << endl;
    bms_array->print_state();
#endif
  }
  
  void setMin(<VARNAME>VarRef_internal d, DomainInt offset)
  {
#ifdef DEBUG
    cout << "Calling setMin: " << d.var_num << " " << offset << " [" 
         << lower_bound(d) << ":" << upper_bound(d) << "] original ["
         << getInitialMin(d) << ":" << getInitialMax(d) << "]"
         << endl;
    bms_array->print_state();
#endif
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );

    DomainInt up_bound = upper_bound(d);
    DomainInt low_bound = lower_bound(d);
    
    if(offset > up_bound)
    {
      getState(stateObj).setFailed(true);
      return;
    }
    
    if(offset > low_bound)
    {
#ifdef FULL_DOMAIN_TRIGGERS
      // TODO : Optimise this function to only check values in domain.
      int domainOffset = d.var_num * <DOMSIZE> + temp1;
      for(DomainInt loop = low_bound; loop < offset; ++loop)
      {
        if(bms_array->isMember(loop + domainOffset)) {
          trigger_list.push_domain_removal(d.var_num, loop);
        }
      }
#endif
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );

    lower_bound(d) = offset;
    DomainInt new_lower = find_new_lower_bound(d);    
    lower_bound(d) = new_lower; 
    
#ifndef NO_DOMAIN_TRIGGERS
    trigger_list.push_domain_changed(d.var_num);
#endif
    trigger_list.push_lower(d.var_num, lower_bound(d) - low_bound);
    if(lower_bound(d) == upper_bound(d)) {
      trigger_list.push_assign(d.var_num, getAssignedValue(d)); 
    }
    }
    D_ASSERT(getState(stateObj).isFailed() || ( inDomain(d, lower_bound(d)) && inDomain(d, upper_bound(d)) ) );
#ifdef DEBUG
    cout << "Exiting setMin: " << d.var_num << " " << lower_bound(d) << " [" 
         << lower_bound(d) << ":" << upper_bound(d) << "] original ["
         << getInitialMin(d) << ":" << getInitialMax(d) << "]"
         << endl;
    bms_array->print_state();
#endif
  }
  
  <VARNAME>VarRef get_var_num(int i);
  <VARNAME>VarRef get_new_var(int i, int j);

  void addTrigger(<VARNAME>VarRef_internal b, Trigger t, TrigType type)
  { D_ASSERT(lock_m); trigger_list.add_trigger(b.var_num, t, type);  }
  
#ifdef DYNAMICTRIGGERS
  void addDynamicTrigger(<VARNAME>VarRef_internal b, DynamicTrigger* t, TrigType type, DomainInt pos = NoDomainValue BT_FUNDEF)
  {  
    D_ASSERT(lock_m);
    D_ASSERT(b.var_num >= <DOMSTART>);
    D_ASSERT(b.var_num <= <DOMEND>);
    D_ASSERT(type != DomainRemoval || (pos >= <DOMSTART> && pos <= <DOMEND>));
    trigger_list.addDynamicTrigger(b.var_num, t, type, pos BT_CALL); 
  }
#endif

  vector<AbstractConstraint*>* getConstraints(const <VARNAME>VarRef_internal& b)
  { return &constraints[b.var_num]; }

  void addConstraint(const <VARNAME>VarRef_internal& b, AbstractConstraint* c)
  { 
    constraints[b.var_num].push_back(c); 
#ifdef WDEG
    if(getOptions(stateObj).wdeg_on) wdegs[b.var_num] += c->getWdeg(); //add constraint score to base var wdeg
#endif
  }

  DomainInt getBaseVal(const <VARNAME>VarRef_internal& b, DomainInt v) const 
  {
    D_ASSERT(inDomain(b, v));
    return v; 
  }

  Var getBaseVar(const <VARNAME>VarRef_internal& b) const
  { return Var(VAR_DISCRETE, b.var_num); }

#ifdef WDEG
  int getBaseWdeg(const <VARNAME>VarRef_internal& b)
  { return wdegs[b.var_num]; }

  void incWdeg(const <VARNAME>VarRef_internal& b)
  { wdegs[b.var_num]++; }
#endif
};

